# scripting addition things
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# bsp or float (default: float)
yabai -m config layout float

# Browser apps always open in Space 1
yabai -m rule --add app="^(Safari|Zen Browser)$" space=1

# Terminal apps always open in Space 2
yabai -m rule --add app="^(Alacritty|Terminal)$" space=2

# Spotify always goes to Space 3
yabai -m rule --add app="^Spotify$" space=3
